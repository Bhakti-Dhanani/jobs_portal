{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "salary": {
      "type": "integer"
    },
    "location": {
      "type": "string",
      "required": true
    },
    "jobType": {
      "type": "enumeration",
      "enum": [
        "full-time",
        "part-time",
        "contract"
      ],
      "required": true
    },
    "expiredAt": {
      "type": "date",
      "required": true
    },
    "applications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::application.application",
      "mappedBy": "job"
    },
    "employer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::employer.employer",
      "inversedBy": "jobs"
    }
  }
}
