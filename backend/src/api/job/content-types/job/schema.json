{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": "Job listings posted by employers"
  },
  "options": {
    "draftAndPublish": false 
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "configurable": false
    },
    "requirements": {
      "type": "text" 
    },
    "salary": {
      "type": "integer",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "jobType": {
      "type": "enumeration",
      "enum": [
        "full-time",
        "part-time",
        "contract",
        "internship"
      ],
      "required": true
    },
    "experienceLevel": {
      "type": "enumeration",
      "enum": [
        "entry",
        "mid",
        "senior",
        "lead",
        "executive"
      ],
      "required": true
    },
    "companyName": {
      "type": "string",
      "required": true
    },
    "industry": {
      "type": "string" 
    },
    "expiredAt": {
      "type": "date",
      "required": true
    },
    "applications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::application.application",
      "mappedBy": "job"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "jobs"
    },
    "employer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::employer.employer",
      "inversedBy": "jobs"
    },
    "requestId": {
      "type": "string",
      "unique": true
    }
  }
}