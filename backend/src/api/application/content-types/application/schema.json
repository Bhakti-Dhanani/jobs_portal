{
  "kind": "collectionType",
  "collectionName": "applications",
  "info": {
    "singularName": "application",
    "pluralName": "applications",
    "displayName": "Application",
    "description": "Job applications submitted by jobseekers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": ["pending", "reviewed", "accepted", "rejected"],
      "default": "pending",
      "required": true
    },
    "job": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::job.job",
      "inversedBy": "applications",
      "required": true
    },
    "applicant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "applications",
      "required": true
    },
    "coverLetter": {
      "type": "text",
      "maxLength": 5000
    },
    "resume": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["files"],
      "pluginOptions": {
        "upload": {
          "maxSize": 5242880
        }
      }
    }
  }
}